<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    tools:context=".SignUp"
    >

    <EditText

        android:id="@+id/editTextNumberPasswordSignUp"
        android:layout_width="271dp"
        android:layout_height="61dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/գաղտնաբառ_login.edittext"
        android:inputType="numberPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="273dp"
        android:layout_height="59dp"
        android:layout_marginBottom="40dp"
        android:drawableLeft="@drawable/ic_peoplelogin"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/Էլհասցե_login.edittext"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberPasswordSignUp"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumberPasswordSignUp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberPasswordSignUp" />

    <EditText

        android:id="@+id/editTextNumberPasswordRepeat"
        android:layout_width="271dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/գաղտնաբառ_SignUp.edittext"
        android:inputType="numberPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumberPasswordSignUp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberPasswordSignUp"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberPasswordSignUp"
        app:layout_constraintVertical_bias="0.073" />

    <EditText

        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:drawableLeft="@drawable/ic_peoplelogin"
        android:drawablePadding="10dp"
        android:ems="13"
        android:hint="@string/անունը_SignUp.edittext"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextTextEmailAddress" />

    <Button
        android:id="@+id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/գրանցվել_login.button"
        android:backgroundTint="@color/ButtonSignColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextNumberPasswordRepeat"
        app:layout_constraintStart_toStartOf="@+id/editTextNumberPasswordRepeat"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberPasswordRepeat" />

    <TextView
        android:id="@+id/goToSignUpActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/մուտք_button"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/SignUp"
        app:layout_constraintStart_toStartOf="@+id/SignUp"
        app:layout_constraintTop_toBottomOf="@+id/SignUp" />
</androidx.constraintlayout.widget.ConstraintLayout>